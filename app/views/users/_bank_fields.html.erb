<div class="grid grid-cols-1 gap-x-8 gap-y-8 pt-10 md:grid-cols-3">
  <div class="px-4 sm:px-0">
    <h2 class="text-base font-semibold leading-7 text-gray-900">Bank information</h2>
    <p class="mt-1 text-sm leading-6 text-gray-600">Card details, Currency and Iban information</p>
  </div>

  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
    <div class="px-4 py-6 sm:p-8">
      <div class="max-w-2xl space-y-10">
        <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <%= form.fields_for :bank, user.bank || Bank.new do |builder| %>
            <div class="sm:col-span-3">
              <%= builder.label :card_expire, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= builder.date_select :card_expire, { discard_day: true, start_year: Date.today.year, end_year: (Date.today + 10.years).year }, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= builder.label :card_type, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= builder.text_field :card_type, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= builder.label :currency, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= builder.text_field :currency, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>

            <div class="sm:col-span-3">
              <%= builder.label :iban, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= builder.text_field :iban, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
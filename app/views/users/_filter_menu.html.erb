<div class="bg-white">
    <div class="mx-auto max-w-3xl px-4 text-center sm:px-6 lg:max-w-7xl lg:px-8">
      <section aria-labelledby="filter-heading" class="border-t border-gray-200 py-6">
        <div class="flex items-center justify-end" data-controller="filter">
          <%= search_form_for @q, class: "space-y-2 w-full", data: { "filter-target": "filter" } do |f| %>
            <button type="button" class="inline-block text-sm font-medium text-gray-700 hover:text-gray-900 sm:hidden">Filters</button>
            <div class="hidden sm:flex sm:items-baseline sm:space-x-8">
              <div id="desktop-menu-0" class="relative inline-block text-left">
                <div>
                  <button data-action="click->filter#toggle" data-filter-menu-param="genderFilter" type="button" class="group inline-flex items-center justify-center text-sm font-medium text-gray-700 hover:text-gray-900" aria-expanded="false">
                    <span>Gender</span>
                    <svg class="-mr-1 ml-1 h-5 w-5 flex-shrink-0 text-gray-400 group-hover:text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </div>

                <div data-filter-target="genderFilter" class="absolute right-0 z-10 mt-2 origin-top-right rounded-md bg-white p-4 shadow-2xl ring-1 ring-black ring-opacity-5 focus:outline-none transform opacity-0 scale-95 hidden">
                  <% ["Male", "Female", ""].each do |gender| %>
                    <div class="flex items-center">
                      <%= f.radio_button :gender_eq, "#{gender.downcase}", id: gender.empty? ? "none" : gender, class: "ml-3 block text-sm font-medium leading-6 text-gray-900", data: { action: "click->filter#triggerSubmit" } %>
                      <label for="<%= gender.empty? ? "none" : gender %>" class="ml-3 block text-sm font-medium leading-6 text-gray-900"><%= gender.empty? ? "None" : gender %></label>
                    </div>
                  <% end %>
                </div>
              </div>

              <div id="desktop-menu-1" class="relative inline-block text-left">
                <div>
                  <button data-action="click->filter#toggle" data-filter-menu-param="bloodGroupFilter" type="button" class="group inline-flex items-center justify-center text-sm font-medium text-gray-700 hover:text-gray-900" aria-expanded="false">
                    <span>Blood group</span>
                    <svg class="-mr-1 ml-1 h-5 w-5 flex-shrink-0 text-gray-400 group-hover:text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                    </svg>
                  </button>
                </div>

                <div data-filter-target="bloodGroupFilter" class="absolute right-0 z-10 mt-2 origin-top-right rounded-md bg-white p-4 shadow-2xl ring-1 ring-black ring-opacity-5 focus:outline-none transform opacity-0 scale-95 hidden">
                  <% ["B+", "O−", "B−", "O+", "A+", "AB−", "A−", ""].each do |bg| %>
                    <div class="flex items-center">
                      <%= f.radio_button :blood_group_eq, "#{bg}", id: bg.empty? ? "none" : bg, class: "ml-3 block text-sm font-medium leading-6 text-gray-900", data: { action: "click->filter#triggerSubmit" } %>
                      <label for="<%= bg.empty? ? "none" : bg %>" class="ml-3 block text-sm font-medium leading-6 text-gray-900"><%= bg.empty? ? "None" : bg %></label>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </section>
    </div>
  </div>
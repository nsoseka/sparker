<h2 class="text-base font-semibold leading-7 text-gray-900 sm:col-span-6">Address</h2>
<%= form.fields_for :address, form.object.address || Address.new do |builder| %>
  <div class="sm:col-span-3">
    <%= builder.label :address, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= builder.text_field :address, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <div class="sm:col-span-3">
    <%= builder.label :city, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= builder.text_field :city, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <div class="sm:col-span-3">
    <%= builder.label :postal_code, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= builder.text_field :postal_code, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <div class="sm:col-span-3">
    <%= builder.label :state, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <div class="mt-2">
      <%= builder.text_field :state, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
    </div>
  </div>

  <h2 class="text-base font-semibold leading-7 text-gray-900 sm:col-span-6">Coordinates</h2>
  <%= builder.fields_for :coordinate, builder.object.coordinate || Coordinate.new do |coordinate_fields| %>
    <div class="sm:col-span-3">
      <%= coordinate_fields.label :lng, "Longitude", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= coordinate_fields.text_field :lng, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
    </div>

    <div class="sm:col-span-3">
      <%= coordinate_fields.label :lat, "Latitude", class: "block text-sm font-medium leading-6 text-gray-900" %>
      <div class="mt-2">
        <%= coordinate_fields.text_field :lat, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
      </div>
    </div>
  <% end %>
<% end %>